<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TournamentsWebApp</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/hel.css"/>
</head>
<body>
    <header class="header">
        <nav class="navbar">

            <a class="navbar-brand desktop" asp-page="/LandingPage">
                <img src="" alt="logo">
            </a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle" asp-page="/Home">
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle" asp-page="/AvailableTournaments">
                            Available Tournaments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/MyProfile">
                            My profile
                        </a>
                    </li>

                    <li class="nav-item">|</li>


                    <li class="nav-item">
                        <form method="post" asp-page="/Login" asp-page-handler="Logout">
                            <button type="submit" class="nav-link">
                                Logout
                            </button>
                            @*<a class="nav-link">
                                    Logout
                                </a>*@
                        </form>
                    </li>



                </ul>
            </div>
        </nav>
    </header>
    @*<div class="container">
        <main role="main" class="pb-3">*@
    @RenderBody()
    @*</main>
        </div>*@

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - TournamentsWebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
